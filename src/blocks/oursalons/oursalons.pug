mixin oursalons()
	+b.oursalons
		+e.container
			+e.menu
				+e.wrapper
					+e(data-title='EVITA STUDIO ХОДЫНКА').item1
					+e(data-title='EVITA CLASSIC').item2
					+e(data-title='EVITA STUDIO РЕчной').item3
			+e.slider
				+e.topinfo
					+e.main
						+e.titlem Evita Premium Ходынка
						+e.titlel ул.Петрозаводская 22, к.1<br />Пн-Вс с 10:00 до 22:00<br />+7 (495) 787-00-57<br />info@evitastudio.ru
						+e('button').def Подробнее о салоне 
				+e.navi
					+e.hline

				+e.myslick
					img(src='assets/images/gallery-1.png')
					img(src='assets/images/gallery-1.png')
					img(src='assets/images/gallery-1.png')

			+e.bullets
				+e.line
					div
					+e('span').leftnum 01
					+e('span').wra
						+e('span').lines
						+e('span').lineb
					+e('span').rightnum 03