.feedback-form
	width 750px
	display flex
	flex-wrap wrap
	justify-content center
	margin 0 auto
	
	&__col
		flex 0 1 50%
		padding 0 2%
		
	&__form-control_textarea
		width 100%
		padding 30px
		border: 1px solid #3f3f3f;
		background-color transparent
		color #fff
		text-transform uppercase
		font-family 'FuturaPT-Book', Helvetica, Arial, sans-serif
		font-size 12px
		letter-spacing .7px
		
		&:focus
			outline-style none
			border-color #fff
		
	&__form-control_input
		display inline-block
		width 100%
		padding 1em 0
		border-bottom 1px solid #3f3f3f
		vertical-align middle
		color #565656
		font-family 'FuturaPT-Book', Helvetica, Arial, sans-serif
		font-weight 400
		
		&:focus
			border-bottom-color #fff
		
	&__form-control_select
		width 100%
		
	.btn-main
		margin-top 3em
		