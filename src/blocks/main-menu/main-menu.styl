.menu
	display flex
	padding-top 12%
	max-width 1040px
	margin 0 auto
	justify-content flex-end
	@media xxl
		padding-top 15.3%
	&__links
		width 37.6%
		display flex
		flex-direction column
		align-items flex-start
	&__link
		display block
		margin-bottom 25px
		font-family  futura
		font-size 37px
		font-weight 700
		color sandal
	&__services
		width 33%
		padding-top 6px
		display flex
		flex-direction column
		align-items flex-start
	&__service
		display block
		font-family playfair
		font-size 24px
		font-weight 400
		margin-bottom 38px
		color gray
	&__contacts
		width 29%
		padding-top 16px
	&__contacts-title
		margin-bottom 23px
		font-size 24px
		font-weight 700
		font-family futura
		line-height 1.25
		color white
	&__socials
		display flex
		margin-bottom 81px
		&-icon
			border 1px solid dove-gray
			color dove-gray
			width 34px
			height 34px
			margin-right 10px
			padding 9px
			font-size 11px
			text-align center
			&:hover
				border-color sandal
				color white
	&__subscribe
		display flex
		flex-direction column
		max-width 230px
		input
			margin-bottom 31px
			&:focus
				color white
		&-submit
			color white
				
		





















