.mainfirstblock
	&__text
		margin-top: 35px
			
	&__col-sm-7.underpic
		background-color: #f4f4f4
		height: 436px
		margin:0px
		padding:0px
		
	&__mainpic
		margin-top: 20px
		margin-right: 0px
		width: 96%
		height: auto
		float: right
		
	&__selected
		background-color #b19870
		color white
		font-size 11px
		font-weight bold
		text-transform uppercase
		padding 20px
		border none
		
	&__def
		color black
		font-size 11px
		font-weight bold
		text-transform uppercase
		padding 20px
		border 1px solid #b19870
		margin-left 20px

	&__next
		display inline-block
		text-transform uppercase
		transform rotate(-90deg)
		transform-origin 0% 100%
		font-size 12px
		color #d5d5d5
		margin 0px
		padding 0px
		line-height 0px
		
	&__title-about
		font-family 'Playfair Display', "Times New Roman", Georgia, serif
		font-weight 400
		line-height normal
		color #b19870
		font-size 15px
		font-style: italic

