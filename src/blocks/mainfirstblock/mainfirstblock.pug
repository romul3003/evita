mixin b-mainfirstblock()
	+b.mainfirstblock
		div.wrapper.container
			+e.text
				+e('p').title-about — Studio of beauty
				+e('h2').main-title Дорогой салон красоты в Москве
				+e('p').subtitle Мы заботимся о красоте наших клиентов и передаем знания многим желающим. Наша цель - нести в мир красоту и радость.
				+e.subscribe
					+e('button').selected.button_full Записаться в салон
					+e('button').def.button_empty Перейти к услугам
				+e.nextbtn
					+e.line
					+e.next Листайте вниз

			+e.image
				+e('img').pic(src=asset('images/mainPic.jpg'))
