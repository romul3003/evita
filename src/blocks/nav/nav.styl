.nav
	display flex
	flex-direction column
	justify-content center
	align-items flex-start
	position relative
	transition max-height .7s
	position absolute
	top 65px
	left -40px
	width 100%
	@media lg 
		position relative
		top 0
		left 0
		max-height none
		flex-direction row
		align-items stretch
	&__link
		padding 27px 0 27px 10px
		color black
		background-color white
		width 100%
		height 64px
		line-height 1
		visibility hidden
		@media lg
			visibility visible
			width auto
			min-width 165px
			border-left 1px solid mercury
			text-align center
		@media xxl
			min-width 201px
		&:hover
			color lighten(black, 30%)
		&:last-of-type
			@media lg
				border-right 1px solid mercury
		&_trigger
			visibility visible
			display block
			width 50%
			text-align center
			&:after
				content ''
				margin-left 5px
				width 6px
				height 7px
				display inline-block
				background transparent url(images/bottom-arrow.png) center/contain no-repeat
				transition transform .3s
			@media sm
				width auto
				padding-left 100px
				text-align left
			@media lg
				display none
.header-open__for-nav
	.nav__link_trigger
		&:after
			transform scale(-1);