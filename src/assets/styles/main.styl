html 
body
	color #000
	font-size 21px
	font-weight 400
	line-height 1.5
*
	box-sizing border-box
	
.container
	max-width 1170px
	margin 0 auto
	@media xxl
		max-width 1530px
a 
	&,
	&:active,	
	&:focus,	
	&:hover,	
	&:visited
		text-decoration none
		cursor pointer
		
button
	outline none
	
input
	background-color transparent
	border 0 solid dove-gray
	border-bottom-width 1px
	outline 0
	color dove-gray
	font-size 12px
	font-weight 700
	font-family futura
	letter-spacing .7px
	text-transform uppercase
	transition transform .3s
	padding 10px 0 18px
	&:focus
		color white

.main-tilte
.title
.title-about
	font-family 'Playfair Display', "Times New Roman", Georgia, serif
	font-weight 400
	line-height normal

.main-title
	font-size 72px

.title-about
	color: #b19870
	font-size 22px
	font-style: italic
	
.title
	font-size 65px
	
.subtitle
	font-family 'FuturaPT-Book', Helvetica, Arial, sans-serif
	line-height normal
	
